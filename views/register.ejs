<% include ./partials/header %> <% include ./partials/message %>

<div id='register' class="container">
  <div class="row">
    <div class="col-12 col-md-6">
      <h3 class="lead">Registration Form</h3>
      <form action="/register" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="d-block"  name="username" placeholder="Username" />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="d-block"  name="email" placeholder="email" />
        </div>

        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input type="number" class="d-block"  name="phone" placeholder="Phone Number" />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="d-block" name="password" placeholder="Password" />
        </div>

        <div class="form-group">
          <label class="d-block" for="password">Confirm Password</label>
          <input
            type="password"
            name="password2"
            placeholder="Confirm password"
          />
        </div>
        <button role="submit">Submit</button>
      </form>
    </div>
    <div class="d-none d-md-block">
            <div class="card">
              <div class="card-body">
                <h5 class="text-capitalize p-3 card-title">welcome to Yelp Camp</h5>
                <p class="card-text">You can view and add campgrounds</p>
                <a href="/campgrounds" role="button" class="btn btn-primary"
                  >View campgrounds</a
                >
            </div>
          </div>
          <div class="row">
            <a href="/register" class="btn btn-outline-primary mr-1" role="button"
              >Register</a
            >
            <a href="/login" class="btn btn-outline-success" role="button">Login</a>
          </div>

        </div>
  </div>
</div>

<% include ./partials/footer %> <% include ./partials/footer %>
