<% if(typeof errors !== "undefined") { %> <% errors.forEach(error => { %>
<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <p><%= error.msg %></p>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
<% }) %> <% } %>

    
 
