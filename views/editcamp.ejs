<% include ./partials/header %> <% include ./partials/message %>
<div class="container  mt-4">

  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <fieldset>
      <legend class="text-center">Edit <%= campground.name %> </legend>
      <div class="form-group">
          <label for="name">Campground Name</label>
          <input type="text" class='form-control' name="name" value="<%= campground.name %>"  autocomplete="off"  />
        </div>
      <div class="form-group">
          <label for="price">Price</label>
          <input type="number" class='form-control' name="price" value="<%= campground.price %>"  autocomplete="off" step="0.01"  />
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" class='form-control' name="image" value="<%= campground.image %>"  autocomplete="off"  />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" name="description" class='form-control' value="<%= campground.description %>"  autocomplete="off" ></input>
        </div>
        <button type='submit' class='btn btn-primary mb-3 btn-block'>Update</button>
    </fieldset> 
  </form>

  <a href="/campgrounds">Go back to Campgrounds</a>
</div>

<% include ./partials/footer %>
