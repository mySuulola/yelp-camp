<% include ./partials/header %> <% include ./partials/message %>

<div id='login' class="container">
  <div class="row">
    <div class="col-12 col-md-6">
      <form action="/login" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" placeholder="Username" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" placeholder="Password" />
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-12 col-md-6 mt-5">
        <h6 class="lead">Or Sign In With with</h6>
        <a href="/auth/facebook" class="btn btn-primary"> <i class="fab  fa-facebook" aria-hidden="true"></i> Facebook</a>
        <a href="auth/twitter" class="btn btn-primary"> <i class="fab  fa-twitter" aria-hidden="true"></i> Twitter</a>
        <a href="auth/google" class="btn btn-danger"> <i class="fab  fa-google" aria-hidden="true"></i> Google</a>
    </div>
  </div>
</div>

<% include ./partials/footer %>
