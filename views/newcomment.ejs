<% include ./partials/header %>
<div class="container">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <fieldset>
      <legend class="text-center">Create a New Campground</legend>
      <div class="form-group">
          <label for="name">Author Name</label>
          <input type="text" autocomplete="off" class='form-control' name="author" placeholder="author" />
        </div>
        <div class="form-group">
          <label for="description">Comment</label>
          <textarea autocomplete="off" name="text" class='form-control' cols="30" rows="10" placeholder="Type here"></textarea>
        </div>
        <button type='submit' class='btn btn-primary mb-3 btn-block'>Submit</button>
    </fieldset> 
  </form>

  <a href="/campgrounds">Go back to Campgrounds</a>
</div>

<% include ./partials/footer %>
