<% include ./partials/header %>
<div class="container">

  <form action="/campgrounds" method="POST">
    <fieldset>
      <legend class="text-center">Create a New Campground</legend>
      <div class="form-group">
          <label for="name">Campground Name</label>
          <input type="text" class='form-control' name="name" placeholder="name" />
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" class='form-control' name="image" placeholder="image url" />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" class='form-control' cols="30" rows="10" placeholder="Description"></textarea>
        </div>
        <button type='submit' class='btn btn-primary mb-3 btn-block'>Submit</button>
    </fieldset> 
  </form>

  <a href="/campgrounds">Go back to Campgrounds</a>
</div>

<% include ./partials/footer %>
