<% include ./partials/header %> <% include ./partials/message %>
<div class="container mt-4">

  <form action="/campgrounds" method="POST">
    <fieldset>
      <legend class="text-center">Create a New Campground</legend>
      <div class="form-group">
          <label for="name">Campground Name</label>
          <input type="text" class='form-control' name="name" placeholder="name"   autocomplete="off" />
        </div>
      <div class="form-group">
          <label for="price">Price</label>
          <input type="number" class='form-control' name="price" placeholder="Price"   autocomplete="off" step="0.01" />
        </div>
        <div class="form-group">
          <label for="image">Image URL</label>
          <input type="text" class='form-control' name="image" placeholder="image url"  autocomplete="off"  />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" name="description" class='form-control' placeholder="Description"  autocomplete="off" ></input>
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" name="date" class='form-control' placeholder="Date"  autocomplete="off" ></input>
        </div>
        <button type='submit' class='btn btn-primary mb-3 btn-block'>Submit</button>
    </fieldset> 
  </form>
</div>

<% include ./partials/footer %>
